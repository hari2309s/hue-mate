{
  "extends": "../../packages/config/src/typescript/node.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "noEmit": false,
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "@/*": ["./*"],
      "@hue-und-you/color-engine": ["../../packages/color-engine/src/index.ts"],
      "@hue-und-you/color-engine/*": ["../../packages/color-engine/src/*"],
      "@hue-und-you/api-schema/trpc": ["../../packages/api-schema/src/trpc.ts"]
    }
  },
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/db" },
    { "path": "../../packages/api-schema" },
    { "path": "../../packages/color-engine" },
    { "path": "../../packages/ml-segmentation" },
    { "path": "../../packages/config" },
    { "path": "../../packages/utils" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}

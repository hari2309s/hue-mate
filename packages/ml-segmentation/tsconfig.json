{
  "extends": "../config/src/typescript/library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@hue-und-you/config": ["../config/src/index.ts"],
      "@hue-und-you/config/*": ["../config/src/*"],
      "@hue-und-you/utils": ["../utils/src/index.ts"],
      "@hue-und-you/utils/*": ["../utils/src/*"]
    }
  },
  "references": [{ "path": "../config" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

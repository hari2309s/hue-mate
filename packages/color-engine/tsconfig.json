{
  "extends": "../config/src/typescript/library.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/conversion": ["./conversion"],
      "@/clustering": ["./clustering"],
      "@/naming": ["./naming"],
      "@/accessibility": ["./accessibility"],
      "@/harmony": ["./harmony"],
      "@/formatting": ["./formatting"],
      "@/export": ["./export"],
      "@/extraction": ["./extraction"],
      "@/types/*": ["./types/*"],
      "@hute-mate/ml-segmentation": ["../ml-segmentation/src/index.ts"],
      "@hute-mate/ml-segmentation/*": ["../ml-segmentation/src/*"],
      "@hute-mate/config": ["../config/src/index.ts"],
      "@hute-mate/config/*": ["../config/src/*"],
      "@hute-mate/utils": ["../utils/src/index.ts"],
      "@hute-mate/utils/*": ["../utils/src/*"],
    },
  },
  "references": [
    { "path": "../ml-segmentation" },
    { "path": "../config" },
    { "path": "../utils" },
    { "path": "../types" },
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}
